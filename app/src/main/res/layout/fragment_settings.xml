<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="0dp"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/background_dark_mode"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="@string/settings">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/nunito_extra_bold"
                    android:gravity="center"
                    android:text="@string/settings"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp" />

            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:fillViewport="true"
        android:measureAllChildren="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/MEDIUM_SPACE">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ly_theme_mode"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/CORNER_RADIUS_SMALL"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/MEDIUM_SPACE">

                        <ImageView
                            android:id="@+id/icSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:src="@drawable/ic_light_night"
                            app:tint="@color/black" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvDarkMode"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/icSwitch"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="@string/dark_mode" />

                        <com.github.angads25.toggle.widget.LabeledSwitch
                            android:id="@+id/switch_dark_mode"
                            android:layout_width="@dimen/_36sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_below="@id/tvDarkMode"
                            android:layout_centerHorizontal="true"
                            app:colorBorder="@color/material_on_background_disabled"
                            app:colorOff="@color/white"
                            app:colorOn="@color/background_dark_mode"
                            app:on="false"
                            app:textOff=""
                            app:textOn="" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/ly_show_profile"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/CORNER_RADIUS_SMALL"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/MEDIUM_SPACE">

                        <ImageView
                            android:id="@+id/ic_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:src="@drawable/ic_profile"
                            app:tint="@color/black" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_profile"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ic_profile"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="@string/profile" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/des_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_profile"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/nunito_light"
                            android:text="Bạn có thể xem thông tin chi tiết về bản thân "
                            android:textAlignment="center"
                            android:textSize="@dimen/TEXT_SIZE_SMALLEST" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.cardview.widget.CardView
                android:id="@+id/ly_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/CORNER_RADIUS_SMALL"
                android:clickable="true"
                android:focusable="true"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_20sdp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/icNotifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_notifications"
                        app:tint="@color/black"
                        app:useMaterialThemeColors="true" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_toEndOf="@+id/icNotifications"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_noti"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="@string/notifi" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_des_noti"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_light"
                            android:text="Bạn sẽ nhận thông báo về kết đôi tại đây ~"
                            android:textSize="@dimen/TEXT_SIZE_SMALLEST" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_count_match"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:textSize="@dimen/TEXT_SIZE_SMALLEST"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_light"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/circle_text_view"
                        android:backgroundTint="@color/background_dark_mode"
                        android:text="15" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/ly_rank_coin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/CORNER_RADIUS_SMALL"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_20sdp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ic_rank_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_ranks"
                        app:tint="@color/black"
                        app:useMaterialThemeColors="true" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_toEndOf="@+id/ic_rank_coin"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_rank_coin"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="@string/ranks" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_des_rank"
                            android:textSize="@dimen/TEXT_SIZE_SMALLEST"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_light"
                            android:text="Bạn có thể xem những người nổi tiếng" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ly_about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/CORNER_RADIUS_SMALL"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_20sdp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ic_about_us"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_about_us"
                        app:tint="@color/black"
                        app:useMaterialThemeColors="true" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_toEndOf="@+id/ic_about_us"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_about_us"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="@string/about" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_des_about_us"
                            android:textSize="@dimen/TEXT_SIZE_SMALLEST"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_light"
                            android:text="Bạn có thể xem thông tin về đội ngũ phát triển" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ly_help"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/CORNER_RADIUS_SMALL"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_20sdp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ic_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_help"
                        app:tint="@color/black"
                        app:useMaterialThemeColors="true" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_toEndOf="@+id/ic_help"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_help"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="@string/helps" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_des_help"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_light"
                            android:text="Giúp bạn dễ dàng trải nghiệm"
                            android:textSize="@dimen/TEXT_SIZE_SMALLEST" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_logout"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                app:contentPadding="@dimen/_6sdp"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/CORNER_RADIUS_SMALL"
                app:cardUseCompatPadding="true">
                <ImageView
                    android:padding="@dimen/_6sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logout"
                    android:layout_width="@dimen/SIZE_ICON_24"
                    android:layout_height="@dimen/SIZE_ICON_24"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>