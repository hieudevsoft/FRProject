<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="0dp"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/background_dark_mode"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="@string/my_profile">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:clickable="true"
                    android:src="@drawable/ic_back"
                    app:tint="@color/black"
                    app:useMaterialThemeColors="true" />

                <TextView
                    android:id="@+id/tv_myprofile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_toEndOf="@+id/btn_back"
                    android:fontFamily="@font/nunito_extra_bold"
                    android:gravity="center"
                    android:text="@string/my_profile"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp" />
            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:fillViewport="true"
        android:measureAllChildren="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/ly_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <include
                layout="@layout/dialog_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/ly_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="@dimen/_8sdp"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ly_avatar"
                        android:layout_width="@dimen/_135sdp"
                        android:layout_height="@dimen/_135sdp"
                        android:layout_centerHorizontal="true"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="@dimen/_67sdp"
                        app:cardElevation="@null">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/icAvatar"
                            android:layout_width="@dimen/SIZE_AVATAR"
                            android:layout_height="@dimen/SIZE_AVATAR"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:src="@drawable/img_avatar" />
                    </androidx.cardview.widget.CardView>

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/icAddImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/ic_add_photo" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ly_avatar"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:gravity="center_horizontal"
                        android:text="'@name"
                        android:textSize="@dimen/TEXT_SIZE_NORMAL"
                        android:textStyle="bold" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_des_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="center_horizontal"
                        android:text="'mô tả bản thân"
                        android:textSize="@dimen/TEXT_SIZE_SMALL" />
                </RelativeLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ly_coins"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="@dimen/CORNER_RADIUS_SMALL"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/MEDIUM_SPACE">

                            <ImageView
                                android:id="@+id/icCoins"
                                android:layout_width="@dimen/SIZE_ICON_24"
                                android:layout_height="@dimen/SIZE_ICON_24"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="@dimen/_16sdp"
                                android:src="@drawable/ic_coins_white"
                                app:tint="@color/black" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_coins"
                                style="@style/TextAppearance.MaterialComponents.Body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/icCoins"
                                android:layout_centerInParent="true"
                                android:layout_marginBottom="@dimen/_6sdp"
                                android:fontFamily="@font/nunito_semibold"
                                android:gravity="center_horizontal"
                                android:text="Coins"
                                android:textStyle="bold" />


                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_coins_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_coins"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="0"
                                android:textAlignment="center" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ly_heart"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="@dimen/CORNER_RADIUS_SMALL"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/MEDIUM_SPACE">

                            <ImageView
                                android:id="@+id/ic_heart"
                                android:layout_width="@dimen/SIZE_ICON_24"
                                android:layout_height="@dimen/SIZE_ICON_24"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="@dimen/_16sdp"
                                android:src="@drawable/ic_heart"
                                app:tint="@color/black" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_heart"
                                style="@style/TextAppearance.MaterialComponents.Body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ic_heart"
                                android:layout_centerInParent="true"
                                android:layout_marginBottom="@dimen/_6sdp"
                                android:fontFamily="@font/nunito_semibold"
                                android:gravity="center_horizontal"
                                android:text="Luợt thích"
                                android:textStyle="bold" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_heart_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_heart"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/nunito_semibold"
                                android:text="0"
                                android:textAlignment="center" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ly_edit_profile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="@dimen/CORNER_RADIUS_SMALL"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/MEDIUM_SPACE">

                            <ImageView
                                android:id="@+id/ic_edit_profile"
                                android:layout_width="@dimen/SIZE_ICON_24"
                                android:layout_height="@dimen/SIZE_ICON_24"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="@dimen/_16sdp"
                                android:src="@drawable/ic_edit_profile"
                                app:tint="@color/black" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_edit_profile"
                                style="@style/TextAppearance.MaterialComponents.Body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ic_edit_profile"
                                android:layout_centerInParent="true"
                                android:layout_marginBottom="@dimen/_6sdp"
                                android:fontFamily="@font/nunito_semibold"
                                android:gravity="center"
                                android:text="Chỉnh sửa hồ sơ"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ly_image_posted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="center"
                        android:text="Hình ảnh"
                        android:textAllCaps="false"
                        android:textSize="@dimen/TEXT_SIZE_NORMAL"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rc_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
            </LinearLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>