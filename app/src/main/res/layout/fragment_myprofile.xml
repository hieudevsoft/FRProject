<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="0dp"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/background_dark_mode"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="@string/my_profile">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_back"
                    app:tint="@color/black"
                    app:useMaterialThemeColors="true"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/tv_myprofile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_toEndOf="@+id/btn_back"
                    android:fontFamily="@font/nunito_extra_bold"
                    android:gravity="center"
                    android:text="@string/my_profile"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp" />
            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:fillViewport="true"
        android:measureAllChildren="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_8sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ly_avatar"
                    android:layout_width="@dimen/_135sdp"
                    android:layout_height="@dimen/_135sdp"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="@dimen/_67sdp"
                    app:cardElevation="@null"
                    android:backgroundTint="@color/white">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/icAvatar"
                            android:layout_width="@dimen/SIZE_AVATAR"
                            android:layout_height="@dimen/SIZE_AVATAR"
                            android:src="@drawable/img_avatar"
                            android:layout_gravity="center_vertical|center_horizontal"/>
                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/icAddImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_add_photo" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ly_avatar"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:gravity="center_horizontal"
                    android:text="'@name"
                    android:textStyle="bold"
                    android:textSize="@dimen/TEXT_SIZE_NORMAL" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_des_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/tv_name"
                    android:text="'mô tả bản thân"
                    android:textSize="@dimen/TEXT_SIZE_SMALL" />
            </RelativeLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ly_coins"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/CORNER_RADIUS_SMALL"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/MEDIUM_SPACE">

                        <ImageView
                            android:id="@+id/icCoins"
                            android:layout_width="@dimen/SIZE_ICON_24"
                            android:layout_height="@dimen/SIZE_ICON_24"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:src="@drawable/ic_coins_white"
                            app:tint="@color/black" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_coins"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/icCoins"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:fontFamily="@font/nunito_semibold"
                            android:gravity="center_horizontal"
                            android:text="Coins"
                            android:textStyle="bold" />


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_coins_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_coins"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="1.145"
                            android:textAlignment="center"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ly_heart"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/CORNER_RADIUS_SMALL"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/MEDIUM_SPACE">

                        <ImageView
                            android:id="@+id/ic_heart"
                            android:layout_width="@dimen/SIZE_ICON_24"
                            android:layout_height="@dimen/SIZE_ICON_24"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:src="@drawable/ic_heart"
                            app:tint="@color/black" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_heart"
                            style="@style/TextAppearance.MaterialComponents.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ic_heart"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:fontFamily="@font/nunito_semibold"
                            android:gravity="center_horizontal"
                            android:text="Luợt thích"
                            android:textStyle="bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_heart_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_heart"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="1.145"
                            android:textAlignment="center"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                android:id="@+id/ly_edit_profile"
                android:layout_width="0dp"
                android:layout_height="@dimen/_100sdp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/CORNER_RADIUS_SMALL"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/MEDIUM_SPACE">

                    <ImageView
                        android:id="@+id/ic_edit_profile"
                        android:layout_width="@dimen/SIZE_ICON_24"
                        android:layout_height="@dimen/SIZE_ICON_24"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:src="@drawable/ic_edit_profile"
                        app:tint="@color/black" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_edit_profile"
                        style="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ic_edit_profile"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:fontFamily="@font/nunito_semibold"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Chỉnh sửa hồ sơ" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ly_image_posted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center_horizontal"
                    android:text="Hình ảnh &amp; video của bạn"
                    android:textSize="@dimen/TEXT_SIZE_NORMAL"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

<!--                kẻ 3x3 hoặc 4x4-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ly_image1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="@dimen/CORNER_RADIUS_SMALL"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/ic_image1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_avatar2" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ly_image2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="@dimen/CORNER_RADIUS_SMALL"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/ic_image2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/img_avatar"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ly_image3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="@dimen/CORNER_RADIUS_SMALL"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/ic_image3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/img_avatar2"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>