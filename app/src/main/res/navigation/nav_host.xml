<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_host"
    app:startDestination="@id/fragmentSettings">


    <fragment
        android:id="@+id/fragmentMainViewPager"
        android:name="com.devapp.fr.ui.fragments.FragmentMainViewPager"
        android:label="FragmentMainViewPager" />
    <fragment
        android:id="@+id/fragmentSplash"
        android:name="com.devapp.fr.ui.fragments.FragmentSplash"
        android:label="FragmentSplash" >
        <action
            android:id="@+id/action_fragmentSplash_to_fragmentLogin"
            app:destination="@id/fragmentLogin"
            app:enterAnim="@anim/anim_slide_in_left"
            app:exitAnim="@anim/anim_slide_out_right"
            app:popEnterAnim="@anim/anim_slide_in_right"
            app:popExitAnim="@anim/anim_slide_out_left"
            />
    </fragment>
    <fragment
        android:id="@+id/fragmentChats"
        android:name="com.devapp.fr.ui.fragments.FragmentChats"
        android:label="FragmentChats" >
        <action
            android:id="@+id/action_fragmentChats_to_fragmentInbox"
            app:destination="@id/fragmentInbox"
            app:enterAnim="@anim/anim_slide_in_left"
            app:exitAnim="@anim/anim_slide_out_right"
            app:popEnterAnim="@anim/anim_slide_in_right"
            app:popExitAnim="@anim/anim_slide_out_left" />
    </fragment>
    <fragment
        android:id="@+id/fragmentSettings"
        android:name="com.devapp.fr.ui.fragments.FragmentSettings"
        android:label="FragmentSettings" >
        <action
            android:id="@+id/action_fragmentSettings_to_fragmentProfile"
            app:destination="@id/fragmentProfile"
            app:enterAnim="@anim/anim_slide_in_right"
            app:exitAnim="@anim/anim_slide_out_left" />
    </fragment>
    <fragment

        android:id="@+id/fragmentLogin"
        android:name="com.devapp.fr.ui.fragments.FragmentLogin"
        android:label="FragmentLogin" />
    <fragment
        android:id="@+id/fragmentInbox"
        android:name="com.devapp.fr.ui.fragments.FragmentInbox"
        android:label="FragmentInbox" />
    <fragment
        android:id="@+id/fragmentProfile"
        android:name="com.devapp.fr.ui.fragments.FragmentMyProfile"
        android:label="FragmentProfile" >
        <action
            android:id="@+id/action_fragmentProfile_to_fragmentSettings"
            app:destination="@id/fragmentSettings"
            app:enterAnim="@anim/anim_slide_in_left"
            app:exitAnim="@anim/anim_slide_out_right" />
        <action
            android:id="@+id/action_fragmentProfile_to_fragmentEditProfile"
            app:destination="@id/fragmentEditProfile" />
    </fragment>
    <fragment
        android:id="@+id/fragmentLoves"
        android:name="com.devapp.fr.ui.fragments.FragmentLoves"
        android:label="FragmentLoves" />
    <fragment
        android:id="@+id/fragmentEditProfile"
        android:name="com.devapp.fr.ui.fragments.FragmentEditProfile"
        android:label="FragmentEditProfile" />
    <fragment
        android:id="@+id/fragmentOtherProfile"
        android:name="com.devapp.fr.ui.fragments.FragmentOtherProfile"
        android:label="FragmentOtherProfile" />

</navigation>